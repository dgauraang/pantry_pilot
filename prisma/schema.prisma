generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model PantryItem {
  id        String   @id @default(cuid())
  name      String
  quantity  String?
  unit      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Recipe {
  id              String   @id @default(cuid())
  title           String
  ingredientsJson String
  stepsJson       String
  notes           String?
  promptJson      String
  createdAt       DateTime @default(now())
}
